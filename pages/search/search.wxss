
.weui-cells-order .weui-cell:before{border-top:1rpx solid #ECECEC}
.pro_price .unit{font-size: 12px}
/* 搜索列表 */
.wxSearch{height: 43px;z-index:2;}
.wxSearch-section{background-color:#1f2f5e;padding:7px 10px;border-bottom:1px #eee solid;position: fixed;left:0;top:0;width:730rpx;}
.wxSearch-pancel{display:flex;flex-direction:row}
.wxSearch-form{flex:8;position:relative;}
.wxSearch-input{background-color:#fff;padding:0 40px 0 30px;font-size:14px;height:28px;line-height: 28px;border-radius: 3px}
.wxSearch-section .wxSearch-button{flex:1;border:none!important;font-size:14px;line-height: 28px;color: #fff}
.search-icon{position:absolute;left:0;top:0;border:none;background:0 0;outline:0;padding:5px 7px;width:18px;z-index:8;height:18px}
.clear-icon{position:absolute;right:0;top:0;border:none;background:0 0;outline:0;padding:5px 7px;width:18px;z-index:8;height:18px}
/* 历史记录 */
.wxSearch-container{position:fixed;top:43px;left:0;width:100%;border-bottom:1px #eee solid}
.wxSearchTitle{display:block;padding:10px;font-size:12px;color:#999;}
.wxSearchHistory{padding:20rpx;background:#fff;}
.wxSearchHistoryItem{padding:10px 0;font-size:14px;margin:0 10px 10px 0;float:left;border-bottom: 1px solid #f0f0f0;width:100%}
.wxSearchHistoryItemText{padding: 0 10px}
.wxSearchHistoryItemDel{float:right;font-size: 12px;color: #999;margin-right:10px;}
.wxSearchDeleteAllBtn{clear:both;margin:0 auto;text-align:center;color:#1c6c90;padding:5px;font-size:14px}
